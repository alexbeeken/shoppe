<section class='show'>
  <section class='image'>
    <% if @product.default_image %>
    <%= image_tag @product.default_image.path, :width => '200px', :style => "float:right" %>
    <% end %>
  </section>
  <section class='name-spacer'>
    <section class='name'>
      <h2><%= @product.name %></h2>
      <section class='short_description'>
        <p><%= @product.short_description %></p>
      </section>
      <section class='price'
      <b><%= number_to_currency @product.price %></b>
    </section>
    </section>
  </section>
  <section class='form'>
    <%= form_tag product_path do %>
      <section class='qlabel'>
        <p> Quantity <p>
      </section>
      <%= number_field_tag 'quantity', 1, min: 1, class: 'quantity-option' %>
      <section class='order'>
        <%= submit_tag "Add to Basket", class: 'btn btn-large btn-primary' %>
      </section>
    <% end %>
  </section>
</section>
<hr>
<section class='arrows'>
  <section class='back-arrow'>
    <%= link_to '/store' do %>
      <icon class='fa fa-arrow-left'> back</i>
    <% end %>
  </section>
  <section class='checkout-arrow'>
    <article class='shopping-cart'>
      <%= link_to basket_path do %>
      <icon class='fa fa-arrow-right'></i>
        <% end %>
      <%= render 'layouts/current_order', current_order: current_order %>
    </article>
  </section>
</section>
