<section class='current-cart'>
  <h2> Shopping Cart </h2>
  <div class='container-fluid'>
    <% if current_order.order_items.count > 0 %>
      <%= render 'items', :order => current_order %>
    <% else %>
      You have no items in your cart.
    <% end %>
  </div>
</section>
<hr>
<section class='arrows'>
  <section class='back-arrow'>
    <%= link_to '/store' do %>
      <icon class='fa fa-arrow-left'> back</i>
    <% end %>
  </section>
  <section class='checkout-arrow'>
    <%= link_to checkout_paypal_path do %>
      <icon class='fa fa-arrow-right'> checkout</i>
    <% end %>
  </section>
</section>
